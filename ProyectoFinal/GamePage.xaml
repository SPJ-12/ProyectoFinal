                               HorizontalOptions="Fill"/>
                        <Button Grid.Column="1"
                                Text="AÃ±adir Jugador"
                                Clicked="OnAddPlayerClicked"
                                HorizontalOptions="Fill"/>
                    </Grid>
                    
                    <!-- Lista de jugadores -->
                    <CollectionView ItemsSource="{Binding Players}"
