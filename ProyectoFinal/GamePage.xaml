                    <!-- Entrada de lanzamiento -->
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="10" RowSpacing="10">
                        <Picker x:Name="CricketNumberPicker"
                                Grid.Column="0"
                                Title="NÃºmero"
