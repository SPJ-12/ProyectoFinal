                            </Picker.ItemsSource>
                        </Picker>
                    </Grid>
                    
                    <Button Text="Registrar Lanzamiento"
                            Clicked="OnCricketThrowSubmitted"
                            HorizontalOptions="Center"/>
                    <Button Text="Deshacer Ãšltimo Lanzamiento"
