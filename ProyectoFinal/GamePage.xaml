                                <Label Text="Total de la ronda:"
                                       FontSize="16" 
                                       FontAttributes="Bold"
                                       HorizontalOptions="Center"
                                       TextColor="White"/>
                                <Label Text="{Binding CurrentRound.TotalPoints, StringFormat='{0} puntos'}"
                                       FontSize="20" 
                                       FontAttributes="Bold"
                                       HorizontalOptions="Center"
                                       TextColor="Yellow"/>
                            </VerticalStackLayout>
